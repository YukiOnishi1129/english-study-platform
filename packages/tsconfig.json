{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "@acme/db": ["./src/db/index.ts"],
      "@acme/db/*": ["./src/db/*"],
      "@acme/domain": ["./src/domain/index.ts"],
      "@acme/domain/*": ["./src/domain/*"]
    }
  },
  "include": [
    "src/**/*",
    "drizzle.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}