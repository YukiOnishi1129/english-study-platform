    "db:migrate": "tsx src/db/migrate.ts",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "drizzle-orm": "^0.38.3",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.11.10",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.30.2",
    "tsx": "^4.19.2",
    "typescript": "^5.5.3"
  }
}
