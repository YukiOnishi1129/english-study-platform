{
  "name": "@acme/shared",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./db": "./src/db/index.ts",
    "./db/*": "./src/db/*.ts",
    "./domain": "./src/domain/index.ts",
    "./domain/*": "./src/domain/*.ts"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "lint": "biome check",
